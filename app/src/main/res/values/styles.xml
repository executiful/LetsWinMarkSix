    <style name="prizingBar" parent="@style/Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="matchball" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/ballcircle1</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_margin">2dp</item>
<!--        <item name="android:padding">2dp</item>-->
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:fontFamily">monospace</item>
<!--        <item name="android:textColor">@color/selectedballtext</item>-->
    </style>
    <style name="matchtext" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_margin">2dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="date_box" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_margin">2dp</item>
        <item name="backgroundColor">?android:attr/titleTextColor</item>
<!--        <item name="android:layout_row">1</item>-->
    </style>
    <style name="money" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">monospace</item>
    </style>

